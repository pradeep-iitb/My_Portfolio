const seedDatabase = async () => {
  try {
    // Connect to MongoDB
    await mongoose.connect(process.env.MONGODB_URI || 'mongodb://localhost:27017/amazon_clone');
    console.log('Connected to MongoDB');

    // Clear existing data
    await User.deleteMany({});
    await Product.deleteMany({});
    console.log('Cleared existing data');

    // Create users
    const createdUsers = await User.create(users);
    console.log('Created users');

    // Add seller ID to products
    const sellerId = createdUsers.find(user => user.role === 'seller')._id;
    const productsWithSeller = products.map(product => ({
      ...product,
      seller: sellerId
    }));

    // Create products
    await Product.create(productsWithSeller);
    console.log('Created products');

    console.log('✅ Database seeded successfully!');
    console.log('');
    console.log('Sample login credentials:');
    console.log('Admin: john@example.com / Password123!');
    console.log('Seller: jane@example.com / Password123!');
    console.log('Customer: customer@example.com / Password123!');
    
    process.exit(0);
  } catch (error) {
    console.error('❌ Error seeding database:', error);
    process.exit(1);
  }
};

seedDatabase();